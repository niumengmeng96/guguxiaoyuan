<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0eff4"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="59dip"
        android:background="@color/firstColor" >

        <Button
            android:id="@+id/fback"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:background="@mipmap/ic_common_arrow" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/fback"
            android:layout_alignBottom="@+id/fback"
            android:layout_centerHorizontal="true"
            android:text="关于我们"
            android:textColor="#e4f3f6"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="GG v1.0" />

        <Button
            android:id="@+id/email"
            android:layout_width="300dip"
            android:layout_height="50dip"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:text="邮箱 :171559039@qq.com"
            android:textColor="#999" />

        <Button
            android:id="@+id/telphone"
            android:layout_width="300dip"
            android:layout_height="50dip"
            android:background="#ffffff"
            android:text="电话:62481712 / 62488071"
            android:textColor="#999" />
        <Button
            android:id="@+id/share"
            android:layout_width="300dip"
            android:layout_height="50dip"
            android:background="#ffffff"
            android:text="分享"
            android:textColor="#999" />

        <Button
            android:id="@+id/update"
            android:layout_width="300dip"
            android:layout_height="50dip"
            android:background="#ffffff"
            android:text="更新"
            android:textColor="#999" />

        <Button
            android:layout_width="300dip"
            android:layout_height="50dip"
            android:background="#ffffff"
            android:text="Copyright©2017 Nice工作室版权所有"
            android:textColor="#999" />
    </LinearLayout>



</LinearLayout>